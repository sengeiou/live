<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="@drawable/bg_gradient_channellist"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="0dp">

    <com.view.ChannelListView
        android:id="@+id/lv_left"
        android:layout_width="300px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:divider="@null"
        android:listSelector="@drawable/item_bg_selector_left"
        android:padding="3dp" />

    <LinearLayout
        android:layout_width="4px"
        android:layout_height="match_parent"
        android:background="#FF4F4F4F" />

    <com.view.ChannelListView
        android:id="@+id/lv_right"
        android:layout_width="530px"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:divider="@null"
        android:listSelector="@drawable/item_bg_selector_right"
        android:padding="3dp" />
</LinearLayout>
